<div class="container-fluid" id="common-login">
  <div class="row">
    <div class="col-xs-12">
      <form class="form-horizontal" role="form" action="<%= action %>" method="post">
        <div class="form-group">
          <label class="col-sm-2 control-label"><%= __('Email') %></label>
          <div class="col-sm-10">
            <input type="email" class="form-control" name="email" placeholder="<%= __('Email') %>">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label"><%= __('Password') %></label>
          <div class="col-sm-10">
            <input type="password" class="form-control" name="password" placeholder="<%= __('Password') %>">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
              <label>
                <input type="checkbox" /> <%= __('Remember me') %>
              </label>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary"><%= __('Sign in') %></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<% script('/js/common.login.js') %>
